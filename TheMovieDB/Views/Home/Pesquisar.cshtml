@model System.Net.TMDb.Movies
@{
    ViewBag.Title = "Pesquisar";
}

<h1>Pesquisar > Resultados</h1>
<h3>Exibindo resultados para "@ViewBag.Query"</h3>
<br>

@foreach (var item in Model.Results)
{
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <div class="media">
                <div class="media-left">
                    <a href="@Url.Action("Detalhes", "Home", new {@id=item.Id})" title="@item.Title">
                        <img alt="@item.Title"
                             class="media-object"
                             src="https://image.tmdb.org/t/p/w154/@item.Poster"
                             data-holder-rendered="true" />
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">@item.Title</h4>
                    @if (@item.ReleaseDate.HasValue)
                    {
                        <p>@item.ReleaseDate.Value.ToShortDateString()</p>
                    }
                    <p>@item.Overview</p>
                </div>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>
    <br>
}
